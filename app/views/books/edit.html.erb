<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
     <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
     <ul>
        <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
        <% end %>
     </ul>
  <% end %>
      <% if flash[:notice] %>
         <p><%= flash[:notice] %></p>
      <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
